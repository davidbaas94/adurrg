<%- include layouts/headeradmin.ejs %> 
<!--start-breadcrumbs-->
<div class="breadcrumbs">
    <div class="container">
        <div class="breadcrumbs-main">
            <ol class="breadcrumb">
                <li><a>Inicio</a></li>
                <li class="active">Lista de manuales</li>
            </ol>
        </div>
    </div>
</div>
<!--end-breadcrumbs--> 
<div class="product">
    <div class="container">
        <% if(Msm=='Agregado'){%>
            <div class="alert alert-success" role="alert">
                Manual Agregado con Exito!
            </div> 
        <%}else if(Msm=='Eliminado'){%>
            <div class="alert alert-success" role="alert">
                Manual Eliminado con Exito!
            </div>
        <% } %>
        <div class="product-main">
            <a href="/galeria" class="btn btn-danger">Agregar Nuevo Manual</a>            
            <div class="account">                                        
            <table class="table table-bordered table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>NÂ°</th>
                    <th>Titulo</th>
                    <th>Descripcion</th>
                    <th>Precio</th>
                    <th>Autor</th>
                    <th>Tecnologia</th>
                    <th>Manual</th>
                    <th>Disponible</th>
                    <th>Imagen</th>                    
                    <th>Opciones</th>
                </tr>
            </thead>
            <tbody>
                <% for(var manual=0; manual<Manuales.length; manual++){%> 
                 <tr>
                    <td><%= manual + 1 %> </td>
                     <td><%=Manuales[manual].titulo %> </td>
                     <td><%=Manuales[manual].descripcion %> </td>
                     <td><%=Manuales[manual].precio %> </td>
                     <td><%=Manuales[manual].autor %> </td>
                     <td><%=Manuales[manual].tecnologia %> </td>
                     <td><%=Manuales[manual].manual %> </td>
                     <td><%=Manuales[manual].cantidaddispo %> </td>
                     <td><img src="/images/<%=Manuales[manual].imagen %>" alt="60px" width="60px"> </td>
                     <td class="col-sm-2 col-xs-2">
                        <a href="/delete?Idmanual=<%=Manuales[manual].Idmanual %> " class="btn btn-danger">Eliminar</a>
                        <a href="/edit?Idmanual=<%=Manuales[manual].Idmanual %>" class="btn btn-info">Editar</a>
                     </td>                                             
                 </tr>
                <% } %> 
            </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<%- include layouts/footeradmin.ejs %>