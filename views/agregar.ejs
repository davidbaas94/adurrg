<%- include layouts/headeradmin.ejs %> 
	<!--start-breadcrumbs-->
	<div class="breadcrumbs">
		<div class="container">
			<div class="breadcrumbs-main">
				<ol class="breadcrumb">
					<li><a>Inicio</a></li>
					<li class="active">Registro de manuales</li>
				</ol>
			</div>
		</div>
	</div>
	<!--end-breadcrumbs-->
	<!--start-account-->
	<div class="account">
		<div class="container"> 
			<div class="account-bottom">
				<div class="col-md-3 account-left">
				</div>
				<div class="col-md-6 account-left">
					<form action="/agregar" method="POST" enctype="multipart/form-data">
					<div class="account-top heading">						 
						<h3>Registro de Manuales</h3>
					</div>
					<div class="address">
						<span>Titulo</span>
						<input type="text" name="titulo" required>
					</div>
					<div class="address">
						<span>Descripción</span>
						<input type="text" name="descripcion" required> 
					</div>
					<div class="address">
						<span>Precio</span>
						<input type="text" name="precio" required>
					</div>		
					<div class="address">
						<span>Autor</span>
						<input type="text" name="autor" required>
					</div>	
					<div class="address">
							<span>Cantidad Disponible</span>
							<input type="text" name="cantidaddispo" required>
					</div>		
					<div class="address">
						<span>Técnologia</span>
						<select required name="tecnologia">							
							<option value="Node JS">Node JS</option>
						</select>
					</div>
					<div class="address">
						<span>Manual en PDF (Elija el Correcto solo puede subir una vez)</span>
						<input type="file" accept=".pdf, .zip" name="manual" required>
					</div>
					<div class="address">
						<span>Imagen</span>
						<select required name="imagen">							
							<% for(var manual=0; manual<Manuales.length; manual++){ %>	
							<option value="<%=Manuales[manual].imagen %>"><%=Manuales[manual].imagen %></option>
							<% } %>
						</select>
					</div>
					<div class="address new">
						<input type="submit" value="Registrar">
					</div>
					</form>
				</div>									
			</div>
		</div>
	</div>
	<!--end-account-->
	<%- include layouts/footeradmin.ejs %>